<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.private_signaling_network_connection_test_app">

    <!-- Network access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Foreground service base permission (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Android 14+ requires declaring a specific foreground service type -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- For the ongoing notification (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Keep CPU awake for long-running background networking -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Allow user to exempt the app from Doze/App Standby -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Private_signaling_network_connection_test_app">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Private_signaling_network_connection_test_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Foreground Service that runs the TCP/UDP loops -->
        <service
            android:name=".NetworkTestService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>
